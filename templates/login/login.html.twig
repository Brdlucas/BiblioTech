{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="py-12">
		<div class="max-w-4xl mx-auto px-6 bg-white p-8 rounded-lg shadow-lg">

			<form method="post">
				{% if error %}
					<div class="alert alert-danger mb-4 p-4 bg-red-100 text-red-700 border border-red-300 rounded">
						{{ error.messageKey|trans(error.messageData, 'security') }}
					</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-4 p-4 bg-green-100 text-green-700 border border-green-300 rounded">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}" class="text-blue-600 hover:text-blue-800">Logout</a>
					</div>
				{% endif %}

				<h1 class="text-3xl font-semibold text-center text-gray-800 mb-6">Connectez-vous</h1>

				<div class="mb-4">
					<label for="username" class="block text-sm font-medium text-gray-700">Email</label>
					<input type="email" value="{{ last_username }}" name="_username" id="username" class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" autocomplete="email" required autofocus>
				</div>

				<div class="mb-6">
					<label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
					<input type="password" name="_password" id="password" class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" autocomplete="current-password" required>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="flex items-center justify-between mb-6">
					<button type="submit" class="w-32 m-auto py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-semibold rounded-lg shadow-md transition-transform transform hover:scale-105 duration-300">
						Se connecter
					</button>
				</div>
			</form>
		</div>
	</div>

{% endblock %}