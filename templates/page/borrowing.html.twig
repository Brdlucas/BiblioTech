{% extends 'base.html.twig' %}
{% block title %}Emprunts - Mes Livres
{% endblock %}
{% block body %}
	{% if borrowings is not empty %}
		<div class="container mx-auto p-6">
			<h2 class="text-2xl font-bold mb-4 text-center">Livres Emprunt√©s</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				{% for borrowing in borrowings %}
					{% set book = borrowing.book %}
					<div class="bg-white shadow-md rounded-lg p-4">
						<img src="{{ book.image }}" alt="{{ book.title }}" class="w-full h-48 object-cover rounded-lg">
						<h3 class="text-lg font-semibold mt-2">{{ book.title }}</h3>
						<p class="text-gray-600 text-sm">Auteur :
							{{ book.author }}</p>
						<p class="text-gray-500 text-xs">Cat√©gorie :
							{{ book.category.name }}</p>

						<p class="text-gray-400 text-xs mt-2">
							Emprunt√© le :
							{{ borrowing.empruntedAt|date('l d F Y √† H:i') }}
						</p>

						<p class="mt-2 text-sm text-gray-700">
							{{ book.content|slice(0, 100) }}...
						</p>
						{% if borrowing.status == 'approved' %}
							<div class="mt-4 flex justify-between items-center">
								<a href="{{ path('borrowing_pdf_view', { 'id': borrowing.id }) }}" target="_blank" class="btn btn-primary">
									üìÑ Voir le rendu
								</a>
								<span class="text-gray-500 text-xs">Retour pr√©vu :
									{{ borrowing.renderedAt|date('d/m/Y') }}</span>
							</div>
						{% endif %}
						<form action="{{ path('app_delete_borrowing_id', {'id': borrowing.id}) }}" method="post" class="flex justify-self-end">
							<button type="submit" class="bg-red-500 text-white py-1 px-4 rounded-lg hover:bg-red-600 ">
								Retourner le livre
							</button>
						</form>
						{% if borrowing.status == 'waiting' %}
							<span class="px-3 py-2 bg-yellow-500 rounded-xl text-white">En attente</span>
						{% elseif borrowing.status == 'approved' %}
							<span class="px-3 py-2 bg-green-600 rounded-xl text-white">Approuv√©</span>
						{% elseif borrowing.status == 'refused' %}
							<span class="px-3 py-2 bg-red-600 rounded-xl text-white">Refus√©</span>
						{% elseif borrowing.status == 'returned' %}
							<span class="px-3 py-2 bg-green-700 rounded-xl text-white">Retourn√©</span>
						{% endif %}
					</div>
				{% endfor %}
			</div>
		</div>
	{% else %}
		<p class="text-center text-gray-500 mt-4">Aucun emprunt trouv√©</p>
	{% endif %}
{% endblock %}