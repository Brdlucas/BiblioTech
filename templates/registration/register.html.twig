{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
	<div class="py-4 flex justify-center items-center min-h-[80vh] bg-gray-100">
		<div class="max-w-lg w-full px-8 py-10 bg-white rounded-2xl shadow-xl">
			<h1 class="text-3xl font-bold text-center text-[#63918b] mb-6">Inscription</h1>

			{% for flash_error in app.flashes('verify_email_error') %}
				<div class="mb-4 p-4 bg-red-100 text-red-700 border border-red-300 rounded-lg">
					{{ flash_error }}
				</div>
			{% endfor %}

			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm) }}

			<div class="mb-4">
				{{ form_label(registrationForm.email, 'Email', {'attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
				<div class="mt-2">
					{{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#63918b] focus:border-[#63918b]'
                    }
                }) }}
				</div>
			</div>

			<div class="mb-4">
				{{ form_label(registrationForm.firstname, 'Pr√©nom', {'attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
				<div class="mt-2">
					{{ form_widget(registrationForm.firstname, {
                    'attr': {
                        'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#63918b] focus:border-[#63918b]'
                    }
                }) }}
				</div>
			</div>

			<div class="mb-4">
				{{ form_label(registrationForm.lastname, 'Nom', {'attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
				<div class="mt-2">
					{{ form_widget(registrationForm.lastname, {
                    'attr': {
                        'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#63918b] focus:border-[#63918b]'
                    }
                }) }}
				</div>
			</div>

			<div class="mb-6">
				{{ form_label(registrationForm.plainPassword, 'Mot de passe', {'attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
				<div class="mt-2">
					{{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#63918b] focus:border-[#63918b]'
                    }
                }) }}
				</div>
			</div>

			<div class="mb-4 flex items-center">
				<div class="flex items-center">
					{{ form_widget(registrationForm.agreeTerms, {
                    'attr': {
                        'class': 'h-4 w-4 text-[#63918b] focus:ring-[#63918b]'
                    }
                }) }}
				</div>
				<label for="agreeTerms" class="ml-2 text-sm text-gray-600">
					J'accepte
					<a href="#" class="text-[#63918b] hover:text-[#4f746e]"> les termes et conditions</a>
				</label>
			</div>

			<div class="flex justify-center mb-6">
				<button type="submit" class="w-40 py-2 bg-[#63918b] hover:bg-[#4f746e] text-white font-semibold rounded-lg shadow-md transition-transform transform hover:scale-105 duration-300">
					S'inscrire
				</button>
			</div>

			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}