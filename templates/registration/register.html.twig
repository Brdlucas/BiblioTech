{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="py-12">
		<div class="max-w-4xl mx-auto px-6 bg-white p-8 rounded-lg shadow-lg">

			{% for flash_error in app.flashes('verify_email_error') %}
				<div class="alert alert-danger mb-4 p-4 bg-red-100 text-red-700 border border-red-300 rounded">
					{{ flash_error }}
				</div>
			{% endfor %}

			<h1 class="text-3xl font-semibold text-center text-gray-800 mb-6">Inscription</h1>

			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm) }}

			<div class="mb-4">
				{{ form_label(registrationForm.email, 'Email', {'attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
				<div class="mt-2">
					{{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500'
                    }
                }) }}
				</div>
			</div>

			<div class="mb-4">
				{{ form_label(registrationForm.firstname, 'Pr√©nom', {'attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
				<div class="mt-2">
					{{ form_widget(registrationForm.firstname, {
                    'attr': {
                        'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500'
                    }
                }) }}
				</div>
			</div>

			<div class="mb-4">
				{{ form_label(registrationForm.lastname, 'Nom', {'attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
				<div class="mt-2">
					{{ form_widget(registrationForm.lastname, {
                    'attr': {
                        'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500'
                    }
                }) }}
				</div>
			</div>

			<div class="mb-6">
				{{ form_label(registrationForm.plainPassword, 'Mot de passe', {'attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
				<div class="mt-2">
					{{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500'
                    }
                }) }}
				</div>
			</div>

			<div class="mb-4 flex items-center">
				<div class="flex items-center">
					{{ form_widget(registrationForm.agreeTerms, {
                    'attr': {
                        'class': 'h-4 w-4 text-indigo-500 focus:ring-indigo-500'
                    }
                }) }}
				</div>
				<label for="agreeTerms" class="ml-2 text-sm text-gray-600">
					J'accepte
					<a href="#" class="text-indigo-500 hover:text-indigo-700"> les termes et conditions</a>
				</label>
			</div>

			<div class="flex justify-center mb-6">
				<button type="submit" class="w-full py-2 bg-indigo-500 hover:bg-indigo-600 text-white font-semibold rounded-lg shadow-md transition-transform transform hover:scale-105 duration-300">
					S'inscrire
				</button>
			</div>

			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}